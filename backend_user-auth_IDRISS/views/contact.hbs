<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact Us - CampusEvents</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <header>
    <div class="companyname">CampusEvents</div>
    <nav class="navigation">
      <a href="/">Home</a>
      <a href="/contact">Contact</a>
      <a href="/register">Register</a>
      <a href="/login" class="loginbutton">Log In</a>
    </nav>
  </header>

  <div class="homepage" style="margin-top: 100px;">
    <h1>Contact Us</h1>
    <form id="contactForm">
      <div class="input-text">
        <input type="text" id="name" placeholder="Full Name" required>
      </div>
      <div class="input-text">
        <input type="email" id="email" placeholder="Email" required>
      </div>
      <div class="input-text">
        <textarea id="message" rows="5" placeholder="Message" style="width:100%; border:2px solid #ddd; border-radius:10px; padding:12px; font-size:16px; resize:none;" required></textarea>
      </div>
      <button type="submit">Send Message</button>
      <p id="successMessage" style="display:none; color:green; font-weight:bold; margin-top:15px;">âœ… Your message was sent!</p>
    </form>
  </div>

  <script>
    document.getElementById("contactForm").addEventListener("submit", function(e) {
      e.preventDefault();
      const msg = document.getElementById("successMessage");
      msg.style.display = "block";
      this.reset();
      setTimeout(() => msg.style.display = "none", 3000);
    });
  </script>
</body>
</html>
